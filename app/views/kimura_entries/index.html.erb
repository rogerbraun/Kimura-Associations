<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", kimura_entries_path  %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> KimuraEntries</h2>
    <div class="inner">
      <table class="table">
        <tr>             
            <th class="first">
            <%= t("activerecord.attributes.kimura_entry.reading", :default => t("activerecord.labels.reading", :default => "Reading")) %>
          </th>
          <th>Nummer</th>
          <th>Kandidaten</th>
          <th>VerknÃ¼pft mit</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @kimura_entries.each do |kimura_entry| -%>
        <tr class="<%= cycle("odd", "even") %>">
                    <td>
            <%= link_to kimura_entry.reading, kimura_entry_path(kimura_entry) %>
          </td>
          <td><%= kimura_entry.number %></td>
          <td><%= kimura_entry.wadoku_candidates.size %></td>
          <td><%= kimura_entry.wadoku_entry ? kimura_entry.wadoku_entry.kanji : "Nichts" %></td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", kimura_entry_path(kimura_entry) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_kimura_entry_path(kimura_entry) %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @kimura_entries  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
