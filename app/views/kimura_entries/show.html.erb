<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", kimura_entries_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_kimura_entry_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", kimura_entry_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.kimura_entry.reading", :default => t("activerecord.labels.reading", :default => "Reading")) %>:</b>
          <%= @kimura_entry.reading %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.kimura_entry.wadoku_entry_id", :default => t("activerecord.labels.wadoku_entry_id", :default => "Wadoku entry")) %>:</b>
          <%= @kimura_entry.wadoku_entry_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_kimura_entry_path(@kimura_entry), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), kimura_entry_path(@kimura_entry), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>